        title Herramientas de Ingenieria
    body 
        header
            .div.navbar 
                h2 Conversores
        main 
            div.converter.converter-unit
                p.title Conversor de unidades
                div.container-input
                    form(action="")
                        div.caja
                            select#userSelect(name="units" onInput="converter()") 
                                option(value="cmin") cm => in
                                option(value="mmin") mm => in
                                option(value="incm") in => cm
                                option(value="inmm") in => mm
                    form(action="")
                        div.caja
                            input#userInput(type="number" onInput="converter()")
                            span#userInputUnit
                    span =
                    span#resultConvert
                    span#unit
                    
            div.converter.converter-roundsquare
                p.title Circular => Cuadrada
                div.container-input
                    div.container-input-inner
                        div.container-input-data
                            form.user(action="") 
                                div.caja
                                    i.fa-solid.fa-circle-notch
                                    input#diametro(type="number" placeholder="Diametro" onInput="roundsquare()") 
                                    span In
                                div.caja 
                                    i.fa-solid.fa-ruler
                                    input#lado(type="number" placeholder="Distancia" onInput="roundsquare()")
                                    span mm   
                    div.schema
                        .area
                            p 
                                span#resultadoArea 
                                i mmÂ²
                        .largo 
                            p 
                                span#resultado1
                                i mm
                        .ancho
                            p 
                                span#resultado2 
                                i mm
                            
